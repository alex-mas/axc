  "compilerOptions": {
    "target": "ES2018",                          
    "module": "commonjs",                     
    "jsx": "react",                    
    "declaration": true,                   
    "outDir": "./dist",                       
    "removeComments": true,                
    "strict": false,                         
    "moduleResolution": "node",         
    "rootDirs": ["./src", "./stories"],
    "esModuleInterop": true,  
  },
  "include": [
    "./src/**/*"
  ]
}